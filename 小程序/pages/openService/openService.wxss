/* pages/openService/openService.wxss */

.open-service-warp {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  text-align: center;
  z-index: 10
}

.open-service {
  width: 560rpx;
  background-color: white;
  margin: 100rpx auto;
  overflow: hidden;
  border-radius: 4px;
}

.open-service-title {
  margin: 34rpx 0 36rpx 0;
  font-size: 36rpx;
  color: #000;
}

.open-service-warp button {
  background-image: linear-gradient(-180deg, #ffd25f 0%, #ffbc25 100%);
  box-shadow: inset 0 0 5px 0 #ffcc5a;
  border-radius: 100px;
  font-size: 30rpx;
  color: #fcfcfc;
  width: 384rpx;
  height: 80rpx;
}

.open-service-warp button:active {
  background-image: linear-gradient(-131deg, #fdb600 3%, #eea500 100%);
  box-shadow: inset 0 0 5px 0 #e5a517;
}
button::after{
  border: none;
}

.btn-sm {
  width: 274rpx;
  height: 70rpx;
  margin-bottom: 40rpx;
}

.open-service-info {
  position: relative;
  font-size: 28rpx;
  color: #9b9b9b;
  width: 340rpx;
  margin: 48rpx auto 40rpx;
}
.open-service-info::after{
 content: "";
 display: block;
 position: absolute;
 left: 0;
 top:0;
 width: 54rpx;
 height: 50%;
 border-bottom: 1px solid #C8C8C8;
}
.open-service-info::before{
 content: "";
 display: block;
 position: absolute;
 right: 0;
 top:0;
 width: 54rpx;
 height: 50%;
 border-bottom: 1px solid #C8C8C8;
}

.open-service-foot {
  border-top: 1px solid #e5e5e5;
  font-size: 36rpx;
  color: #9b9b9b;
  height: 111rpx;
  line-height: 111rpx;
}
