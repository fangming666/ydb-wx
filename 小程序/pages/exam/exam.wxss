.exam-scroll {
  background: #eef2f4;
  min-height: 100vh;
  padding-top: 96rpx;
  box-sizing: border-box;
}

.exam-scroll-padding {
  padding-top: 86rpx;
}

.exam-no-child {
  padding-top: 0rpx;
}

.exam-no-all {
  height: 100vh !important;
  padding: 0;
}

.bg-white {
  height: 100vh;
}

.exam-item {
  box-shadow: inset 0 0 2px 0 rgba(221, 229, 233, 0.67);
  background-color: white;
  margin-bottom: 20rpx;
}

.exam-item:first-child {
  margin-top: 10rpx;
}

.exam-item-head {
  background: #fafafa;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 32rpx;
  border-bottom: 1px solid #f4f4f4;
}

.exam-item-head>view:first-child {
  font-size: 28rpx;
}

.exam-item-head>view:last-child {
  display: flex;
  align-items: center;
}

.exam-item-head>view:first-child image {
  width: 38rpx;
  height: 30rpx;
  margin-right: 6rpx;
  position: relative;
  top: 5rpx;
}

.exam-item-time {
  font-size: 26rpx;
  color: #bdbdbd;
}

.exam-one-peg {
  font-size: 24rpx !important;
  color: #fff;
  background: #ffa834;
  border-radius: 3px;
  margin-left: 10rpx;
  width: 164rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.exam-item-content {
  padding: 40rpx 32rpx 56rpx;
  overflow: visible;
}

.exam-item-title {
  font-size: 36rpx;
  color: #3a3a3a;
  padding: 0 16rpx;
  margin-bottom: 40rpx;
}

.exam-item-title.text-center {
  margin-bottom: 0;
}

.grade {
  text-align: center;
  font-size: 64rpx;
  color: #3a3a3a;
}

.grade-only {
  font-size: 94rpx;
  color: #3a3a3a;
  text-align: center;
  line-height: 1;
  margin: 20rpx 0 40rpx;
}

.goal {
  font-size: 92rpx;
  color: #3a3a3a;
  text-align: center;
  line-height: 1
}

.goal>image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 6rpx;
  text-align: center;
}

.allGoal {
  font-size: 24rpx;
  color: #9b9b9b;
  text-align: center;
  margin-top: 6rpx;
  margin-bottom: 10rpx;
}

.exam-btn-group {
  /* display: flex;
  justify-content: space-around; */
}

.exam-btn-group button {
  float: left;
  width: 290rpx;
  height: 66rpx;
  font-size: 28rpx;
  color: #479dd4;
  vertical-align: middle;
  background-image: linear-gradient(-162deg, #edfbff 0%, #d7f1ff 100%);
  box-shadow: 0 4px 4px 0 rgba(217, 241, 255, 0.37), inset 0 0 7px 0 #dcf2ff;
  border-radius: 100px;
}

.exam-btn-group button:last-child {
  float: right;
}

.exam-btn-group>navigator {
  border-radius: 100px;
}

.exam-btn-group button::after {
  border: none;
}

.exam-btn-active {
  background-image: linear-gradient(-162deg, #d7f1f8 0%, #b7dff5 100%) !important;
  box-shadow: 0 4px 4px 0 rgba(190, 216, 232, 0.37), inset 0 0 7px 0 #a5dbfb !important;
  color: #479dd4 !important;
}

.text-center {
  text-align: center !important;
}

.btn-primary {
  width: 670rpx;
  background: #28bcff;
  /* border: 1px solid rgba(5, 5, 5, 0.08); */
  margin: 0 auto;
  color: white;
}

.no-vip {
  min-height: 100vh;
  background-color: white;
  position: relative;
}

.no-vip-info {
  width: 690rpx;
  height: 292rpx;
  box-sizing: border-box;
  position: absolute;
  top: 172rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #fffcf3;
  box-shadow: 0 2px 6px 0 rgba(89, 89, 89, 0.10);
  border-radius: 5px;
}

.no-vip-info-title {
  background: #ffc40c;
  border-radius: 100px;
  width: 380rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  margin: 34rpx auto 25rpx;
  font-size: 34rpx;
  color: #fff;
}

.no-vip-info-item>image {
  width: 30rpx;
  height: 46rpx;
  margin-right: 18rpx;
  position: relative;
  top: 8rpx;
}

.no-vip-info-item {
  width: 50%;
  text-align: center;
  margin-bottom: 16rpx;
}

.no-vip-info-item>text {
  width: 120rpx;
  display: inline-block;
  font-size: 30rpx;
  color: #674f41;
  text-align: left;
}

.no-vip-text {
  margin-top: 220rpx;
  padding-left: 42rpx;
  padding-right: 42rpx;
}

.no-vip-text>view:first-child {
  font-size: 34rpx;
  color: #3a3a3a;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.no-vip-text>view:nth-child(2), .no-vip-text>view:nth-child(3) {
  font-size: 30rpx;
  color: #282828;
  margin-bottom: 6rpx;
}

.no-vip-text>view:nth-child(2)>text, .no-vip-text>view:nth-child(3)>text {
  color: #fa9003;
}

.no-vip-text>view:nth-child(2)>text, .no-vip-text>view:nth-child(3)>text {
  color: #fa9003;
}

.account-info {
  margin-bottom: 80rpx;
}

.exam-btn-group>.exam-btn-disabled {
  background-image: linear-gradient(-162deg, #f5f5f5 0%, #f4f5f6 100%);
  box-shadow: 0 4px 4px 0 rgba(240, 240, 240, 0.37), inset 0 0 7px 0 #ebebeb;
  color: #b7b7b7;
}
